<h2><%= @nation.name %></h2>
<%= image_tag ("/assets/flags/" + @nation.img), alt: "Country Flag"%>
<h3>This nationality has <%= pluralize @nation.players.count, 'player' %>.</h3>

<p><%= link_to 'Home', root_path %></p>

<% if @nation.players.count == 0 %>
  <h2>Sorry, no players here yet.</h2>
<% else %>
  <ul>
    <% @nation.players.each do |player| %>
      <li>
        <%= link_to player.name, player %>, <%= player.position %>
      </li>
    <% end %>
  </ul>
<% end %>